{
  "manifest_version": 3,
  "name": "CBG爬虫助手",
  "version": "1.0.0",
  "description": "梦幻西游CBG爬虫系统DevTools插件",
  "permissions": ["activeTab", "storage", "debugger", "cookies"],
  "host_permissions": ["https://*.163.com/*", "https://*.cbg.163.com/*"],
  "background": { "service_worker": "background.js" },
  "devtools_page": "devtools.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
