{
  "manifest_version": 3,
  "name": "梦幻灵瞳",
  "version": "1.0.0",
  "description": "梦幻灵瞳",
  "permissions": ["activeTab", "storage", "debugger", "cookies", "sidePanel"],
  "host_permissions": ["https://xyq.cbg.163.com/*"],
  "background": { "service_worker": "background.js" },
  "side_panel": {
    "default_path": "panel.html"
  },
  "action": {
    "default_title": "梦幻灵瞳",
    "default_popup": ""
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
